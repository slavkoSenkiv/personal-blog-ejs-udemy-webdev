<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= homeStartingContent %> </p>

<% postsLst.forEach(function(blogPost){ %>

    <% let postDescr = blogPost.postInput.substring(0, 100) + "..." %>
    <% let readMore = '/posts/' + blogPost.titleInput %>

    <h2><%= blogPost.titleInput %></h2>
    <p><%= postDescr %><a href= <%= readMore %> >Read more</a></p>
    
<% }); %>
    


