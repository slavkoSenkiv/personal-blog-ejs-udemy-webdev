<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">

    <div class="form-group">
            <label>Title</label>
            <input type="text" name="titleInput" class="form-control" placeholder="Your title here"> 
     
            <label>Post</label>
            <textarea type="text" name="postInput" class="form-control" placeholder="Your post here" rows="5" cols="30"></textarea>
    
            <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </div>

</form>


